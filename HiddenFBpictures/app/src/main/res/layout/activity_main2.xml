<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hidden.mohamedwahabi.hiddenfbpictures.activites.Main2Activity">


    <LinearLayout
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:id="@+id/linearLayout">

    <GridView
        android:id="@+id/albumlist"
        android:numColumns="2"
        android:verticalSpacing="@dimen/grid_margin_one"
        android:horizontalSpacing="@dimen/grid_margin_one"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/colorTranspart"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:onClick="prev"
                    android:text="Previews"
                    android:id="@+id/prev"
                    android:layout_weight="5"
                    android:background="@drawable/butback"
                    android:layout_width="wrap_content"
                    style="@style/butStyle"
                    android:layout_height="match_parent" />
                <Button
                    android:onClick="next"
                    android:text="Next"
                    android:id="@+id/next"
                    android:layout_weight="5"
                    style="@style/butStyle"
                    android:background="@drawable/butback"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>















</LinearLayout>
    <View
        android:visibility="gone"
        android:background="@color/colorTranspart"
        android:id="@+id/viewid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
